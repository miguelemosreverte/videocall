# Build stage
FROM golang:1.21-alpine AS builder

WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download

COPY relay-server.go .
RUN CGO_ENABLED=0 GOOS=linux go build -o relay-server relay-server.go

# Run stage
FROM alpine:latest

RUN apk --no-cache add ca-certificates
WORKDIR /root/

COPY --from=builder /app/relay-server .

EXPOSE 8080

CMD ["./relay-server"]