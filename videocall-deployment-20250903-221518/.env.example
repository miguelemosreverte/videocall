# WebP Conference Server Configuration
# Copy this file to .env and update with your values

# Domain Configuration
DOMAIN=your-domain.com
USE_SSL=true
CERT_EMAIL=your-email@example.com

# Performance Settings
MAX_USERS_PER_ROOM=10
VIDEO_QUALITY=auto  # auto, high, medium, low
AUDIO_BITRATE=32000  # in bits per second

# Bandwidth Management (in kbps)
BANDWIDTH_LIMIT=0  # 0 = unlimited, set to your server's capacity
PER_USER_BANDWIDTH=1000  # Bandwidth allocated per user

# Server Ports (usually don't need to change)
HTTP_PORT=80
HTTPS_PORT=443
WS_PORT=3001

# Logging
LOG_LEVEL=info  # debug, info, warn, error